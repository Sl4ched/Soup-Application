<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderFinish"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo2" />

    <TextView
        android:id="@+id/soupBitterAndSalty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:text="İçinde" />

    <TextView
        android:id="@+id/ingredientsAllList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:text="" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:visibility="invisible"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:text="Olsun" />

    <TextView
        android:id="@+id/exstra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_marginTop="45dp"
        android:text="Exstra İstek:" />

    <TextView
        android:id="@+id/newOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yeni Sipariş"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/wrong"
        android:layout_width="100dp"
        android:layout_marginTop="25dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/wrong" />

</LinearLayout>